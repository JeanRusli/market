
<div class="row">
<div class="col-md-6">
<%= image_tag @roast.image.url(:original), class: "img-responsive"%>
</div>
<div class="col-md-6">
  <h3><%= @roast.name %> roasted by <%= @roast.roaster %></h3>
  <p><%= @roast.description %></p>
  <h4 class="text-center">$<%= @roast.price.to_f / 100 %></h4>
      
      <%= form_for @order_item, remote: true do |f| %>
      <h4 class="text-center">Unit Price: <span style="color: green"><%= number_to_currency @roast.price / 100 %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :roast_id, value: @roast.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      
</div>
</div>
