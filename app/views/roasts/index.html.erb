<p id="notice"><%= notice %></p>

<h1>Listing Roasts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Roaster</th>
      <th>Type</th>
      <th>Description</th>
      <th>Price</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roasts.each do |roast| %>
      <tr>
        <td><%= roast.name %></td>
        <td><%= roast.roaster %></td>
        <td><%= roast.type %></td>
        <td><%= roast.description %></td>
        <td><%= roast.price %></td>
        <td><%= roast.available %></td>
        <td><%= link_to 'Show', roast %></td>
        <td><%= link_to 'Edit', edit_roast_path(roast) %></td>
        <td><%= link_to 'Destroy', roast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

