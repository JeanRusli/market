<%= simple_form_for(@roast) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :roaster %>
    <%= f.input :type %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :available %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
