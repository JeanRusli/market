<div class="row">
	<h1 class="text-center">Dashboard</h1>
<div class="col-md-4">
	<h3 class="text-center">
		Books <%= link_to "New Roast", new_roast_path, class: "btn btn-primary btn-sm" %>
	</h3>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Price</th>
          <th>Roast Name</th>
          <th>Available</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @roasts.each do |roast| %>
        <tr>
          <td><%= roast.id %></td>
          <td><%= link_to roast.name, roasts_path(roast) %></td>
          <td><%= roast.available %></td>
          <td><%= link_to "Edit", edit_roast_path(roast) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
<div class="col-md-4">
	<h3 class="text-center">
		Purchases
	</h3>
</div>
<div class="col-md-4">
	<h3 class="text-center">
		Sales
	</h3>
</div>
</div>