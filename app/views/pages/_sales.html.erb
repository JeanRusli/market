<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Buyer</th>
    </tr>
  </thead>
  <tbody>
  <% @sales.each do |sale| %>
    <tr>
      <% sale.order.each do |oi| %>
	<% oi.each do |ro| %>
	  <td><%= link_to ro.roast.name, pickup_path(sale.guid) %></td>
	  <td><%= time_ago_in_words(sale.created_at) %> ago</td>
	  <td><%= sale.buyer_email %></td>
	<% end %>
	<% end %>
    </tr>
  <% end %>
  </tbody>
</table>
